@model List<PortfolioItem>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Client</th>
            <th>Date</th>
            <th>Url</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ClientName</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.ProjectUrl</td>
                <td>@item.Category.CategoryName</td>
            </tr>
        }
    </tbody>
</table>